<!DOCTYPE html>
<html>
<head>
  <title>Meus Aluguéis</title>
  <style>
    body {
      font-family: sans-serif;
      margin: 5px;
      padding: 5px;
    }
    
    .header {
      display: flex;
      justify-content: flex-end;
      padding: 10px;
    }
    
    .header a {
      margin-left: 10px;
    }
    
    .title-wrapper {
      border: solid 1px #2a163d;
      border-radius: 10px;
      background-color: #DABCF9;
      padding: 20px;
      text-align: center;
    }
    
    .title-wrapper h1 {
      margin: 0;
      color: rgb(27, 27, 28);
      font-size: 33px;
    }
    
    .aluguel-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      padding: 20px;
    }
    
    .aluguel-card:hover {
      border: solid 1px;
      border-color: rgb(221, 174, 219);
      background-color: #e8e5e5;
    }
    
    .aluguel-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 300px;
      padding: 10px;
      margin: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #f5f5f5;
    }
    
    .aluguel-info {
      margin-top: 10px;
      text-align: center;
    }
    
    .aluguel-info h2 {
      margin: 0;
      font-size: 22px;
    }
    
    .aluguel-info p {
      text-align: left;
      margin: 5px 0;
    }
    
    a {
      border-radius: 30px;
      text-align: center;
      display: block;
      height: auto;
      width: 150px;
      padding: 10px;
      font-size: 20px;
      border: solid 1px;
      color: white;
      background-color: #A069C1;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="header">
    <a href="/menu">Inicio</a>
  </div>
  
  <div class="title-wrapper">
    <h1>Meus Aluguéis</h1>
  </div>
  
  <div class="aluguel-list">
    <% if (alugueis.length > 0) { %>
      <% alugueis.forEach(function(aluguel) { %>
        <div class="aluguel-card">
          <div class="aluguel-info">
            <h2>Detalhes do Aluguel</h2><br>
            <p>Aluguel ID: <%= aluguel._id %></p>
            <p>Data de Início: <%= aluguel.dataInicio %></p>
            <p>Data de Fim: <%= aluguel.dataFinal %></p>
            <p>Valor Total: <%= aluguel.valorTotal %></p>
            <p>Método de Pagamento: <%= aluguel.metodoPagamento %></p>
            <p>Status: <b><%= aluguel.status %></b></p>
          </div>

          <hr>
          <div class="car-info">
            <h2>Detalhes do Carro</h2>
            <p>Nome: <%= aluguel.carro.nome %></p>
            <p>Marca: <%= aluguel.carro.marca %></p>
            <p>Cor: <%= aluguel.carro.cor %></p>
            <p>Valor: <%= aluguel.carro.valor %></p>
            <p>Preço Diária: <%= aluguel.carro.precoDiaria %></p>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>Nenhum aluguel encontrado.</p>
    <% } %>
  </div>
</body>
</html>
